[user]
  name = Andrey Samsonov
  email = andrey.samsonov@gmail.com
	signingKey = /Users/kr/.ssh/id_rsa.pub
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "diff"]
	whitespace = red reverse
[core]
	whitespace = trailing-space,space-before-tab
	editor = micro

[alias]
  st = status
  ci = commit
  br = branch
  bra = branch -a
  co = checkout
  df = diff
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
[push]
	default = simple
[credential]
  helper = osxkeychain
[commit]
	gpgSign = true
[gpg]
	format = ssh
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	postBuffer = 524288000
[diff]
	wsErrorHighlight = all
